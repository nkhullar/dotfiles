# to make the directory aliases work
alias cd="cd "

# careful with copy/mv/rm stuff
alias cp="cp -v"
alias mv="mv -iv" 
alias rm="rm -iv"

unalias ls >/dev/null 2>&1
unalias ll >/dev/null 2>&1
unalias grep >/dev/null 2>&1

alias ls="ls --color=always"
alias grep="grep --color=always"

function ll() {
    ls -alF "$@" | more;
}

